<!--
  不带背景
  icon_left：url,
  title_text:string,
  icon_right:url
  -->
<template name="header-content-1">
  <view class='header'>
    <view class='header-content box box-hor'>
      <view class='header-left box box-apc'  bindtap='bindBackChage'>
        <image src='{{icon_left}}'></image>
      </view>
      <view class='header-text box box-f1 box-apc'>{{title_text}}</view>
      <view class='header-right box box-apc'>
        <image src='{{icon_right}}'></image>
      </view>
    </view>
  </view>
</template>

