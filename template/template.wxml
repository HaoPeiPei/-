</template>

<!--轮播 
  left_icon：url,
  title_text:string,
  right_icon:url,
  imgUrls:array
 -->
<template name="header_content_lunbo">
  <view class='header'>
    <view class='header-swiper'>
      <swiper indicator-dots='true' autoplay='false' style='height:380rpx'>
        <block wx:for="{{imgUrls}}" wx:for-item="it" wx:key="*this">
          <swiper-item>
            <image src='{{it}}' style='width:100%;height:100%;' />
          </swiper-item>       
        </block>
      </swiper>
      <view class='header-con'>
        <view class='box box-f1 box-hor color-f margin-lr-1'>
          <view class='header-left' catchtap='catchBackChange'>
            <image src='{{left_icon}}' style='width:16rpx;' mode='widthFix' />
          </view>
          <view class='box box-f1 box-apc font-15'>{{title_text}}</view>
          <view class='header-right'>
            <image src='{{right_icon}}' style='width:34rpx;margin-top:12rpx;' mode='widthFix' />
          </view>
        </view>
      </view>
    </view>
  </view>
</template>