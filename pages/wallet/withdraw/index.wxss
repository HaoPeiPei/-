@import "../../../template/template.wxss"; 
.draw_price {
    padding: 40rpx 30rpx 0 30rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    color: #333;
  }
.draw_price .f-s-md{
    font-size: 28rpx;
    line-height: 1;
}
.draw_price .price {
    font-size: 70rpx;
    height: 60rpx;
    width:80%;
    text-align: left;
}
.draw_price > view:nth-child(2) {
    padding: 40rpx 0;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-between;
    border-bottom: 1px solid #d7d7d7;
}
.draw_price > view:nth-child(2) >view{
    flex:1;
    display:flex;
    width:50%;
}
.draw_price > view:nth-child(2) > view:last-child {
    display:flex;
    justify-content:flex-end;
}
.extractable {
    padding: 40rpx 0;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
}
.balance-list {
    display: flex;
    flex-direction: column;
}
.list-item {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
    padding: 40rpx 30rpx;
    background-color: #fff;
    border-bottom: 1px solid #d7d7d7;
}
.pb0{
    padding-bottom:0;
}
.list-item .item-wrap {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
.item-wrap .item-text {
    font-size: 34rpx;
    color: #333;
  }
.cardInput {
    flex: 3;
    font-size:  34rpx;
    color: #333;
}
.cardInput input {
    width: 100%;
    height: 100%;
    font-size:  34rpx;
}
.ps-text {
    color: #999;
    padding : 30rpx 30rpx 0 30rpx;
    font-size: 28rpx;
}
.ps-text h3 {
    line-height: 1;
    font-weight: normal;
    margin-bottom:0.9375rem;
    color:#555;
}
.ps_info {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    line-height: 1.25rem;
    padding-bottom:0.625rem;
}
footer {
    background-color: #fff;
}
.btn-wrap {
    padding: 20rpx 26rpx;
}
.btn {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    font-size: 36rpx;
    width: 100%;
    background-color: #f4494c;
    color: #fff;
}
