<!--pages/login/login.wxml-->
<!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
<view class='header'>
    <open-data type="userAvatarUrl"></open-data>
</view>

<view class='content'>
    <view>申请获取以下权限</view>
    <text>获得你的公开信息(昵称，头像等)</text>
</view>
<!-- 需要使用 button 来授权登录 -->
<button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN"  wx:if="{{canIUse}}" bindgetuserinfo="bindGetUserInfo" withCredentials="true">授权登录</button>
<view wx:else>请升级微信版本</view>