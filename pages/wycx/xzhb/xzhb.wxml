<!--pages/sscx/xzhb/xzhb.wxml-->
<import src="../../../template/template.wxml" />
<!-- 添加航班信息 -->
<view class='wrap' wx:if='{{inBind_1}}'>
  <template is="header_content_noBackod" data="{{...header_text_1}}" />
  <view class='box box-f1 backgd-f box-ver' style='margin-bottom:80rpx;'>
    <view class='box box-f1 border-b-1 margin-lr-1 box-ac padding-tb-1'>
      <view class='' style='background:url(../../images/hbxx_icon.png) no-repeat center center;background-size:cover;width:30rpx;height:30rpx;'></view>
      <view class='box box-f1 font-15 margin-l-1 color-9'>航班信息</view>
    </view>
    <view class='box box-f1 margin-lr-1'>
      <view class='box box-f1 margin-l-5 font-13 border-b-1 padding-tb-1 box-ac'>
        <view class='color-9 left-title'>当前城市</view>
        <view class='box box-f1 color-3' style="color:#ccc;">{{flight.startCityName}}</view>
      </view>
    </view>
    <view class='box box-f1 margin-lr-1'>
      <view class='box box-f1 margin-l-5 font-13 border-b-1 padding-tb-1 box-ac'>
        <view class='color-9 left-title'>航班号</view>
        <view class='box box-f1 color-3'>
          <input type='text' placeholder='请输入航班号' bindblur="flightNoReg" name="flightNo" value='{{flight.flightNo}}' />
        </view>
      </view>
    </view>
    <view class='box box-f1 margin-lr-1'>
      <view class='box box-f1 margin-l-5 font-13 border-b-1 padding-tb-1'>
        <view class='color-9 left-title'>起飞时间</view>
        <view class='box box-f1 color-3'>
          <picker bindchange='bindqcDateChange' mode="date" value="{{flight['flyDate']}}" start='{{startDate}}' end='{{endDate}}' style='width:80%;' >
            <input type='text' placeholder='请选择使用日期' value="{{flight['flyDate']}}" disabled="true" name="flyDate"  />
          </picker>
        </view>
      </view>
    </view>
    <view class='box box-f1 margin-lr-1'>
      <view class='box box-f1 margin-l-5 font-13 padding-tb-1'>
        <view class='color-9 left-title'>预约航程</view>
        <view class='box box-f1 color-3' class="{{(flight['DepCityName']!='' && flight['DepCityName']!=null&&flight['ArrCityName']!=''&&flight['ArrCityName']!=null)?'':'none'}}">
           <view style="color:#3eabff;">{{flight['DepCityName']}}<i class="icon-toArror" style="margin:0 24rpx;"></i>{{flight['ArrCityName']}}</view>
        </view>
      </view>
    </view>
    <view class='height-10'></view>
    <view class='box box-f1 border-b-1 margin-lr-1 box-ac padding-tb-1 '>
      <view class='' style='background:url(../../images/hbxx_icon.png) no-repeat center center;background-size:cover;width:30rpx;height:30rpx;'></view>
      <view class='box font-15 margin-l-1 color-9'>乘机人</view>
      <view class='box font-11 color-9 box-ae margin-l-1'>已选乘客：
        <text>{{selectPasseners.length}}</text>人</view>
      <view class='box box-pe box-f1 font-13 '>
        <text class='border-2' bindtap='bindNavChange'>+添加乘机人</text>
      </view>
    </view>
    <block class='{{selectPasseners.length==0?"none":""}}' wx:for="{{selectPasseners}}" wx:key="*this">
      <view class='box box-f1 margin-lr-1'>
        <view class='box box-f1 margin-l-5 font-13 border-b-1 padding-tb-1 box-ac {{inCaTch?"none":""}}'>
          <view style='background:url(../../images/back-y.png) no-repeat center center;background-size:cover;width:48rpx;height:48rpx;' data-passenerid='{{item.id}}' catchtap='onSelectPassener'></view>
          <view class='box box-f1 box-ver'>
            <view class='box box-f1 box-hor margin-l-1 padding-tb-2'>
              <view class='left-title-1 color-9'>姓名：</view>
              <view class='box box-f1 color-3'>{{item.name}}</view>
            </view>
            <view class='box box-f1 box-hor margin-l-1 padding-tb-2'>
              <view class='left-title-1 color-9'>身份证：</view>
              <view class='box box-f1 color-3'>{{item.cert_no}}</view>
            </view>
          </view>
        </view>
      </view>
    </block>
  </view>
  <view class='box box-f1 box-apc font-16 color-f padding-tb-1 ' style='background:red;position:fixed;bottom:0;width:100%' catchtap='submitFlightInfo'>确定</view>
</view>
<!-- 选择旅客 -->
<view class='selectPassenger' wx:if="{{inBind_2}}"> 
  <view class='header'>
    <view class='header_noBackod border-b-1'>
      <view class='header-con'>
        <view class='box box-f1 box-hor  margin-lr-1'>
          <view class='header-left' bindtap='bindBackChange_2'>
            <image src='../../images/back-b.png' style='width:16rpx;' mode='widthFix' />
          </view>
          <view class='box box-f1 box-apc font-15'>选择旅客</view>
          <view class='header-right'>
            <!-- <image src='{{right_icon}}' style='width:34rpx;margin-top:12rpx;' mode='widthFix' wx:if="{{right_icon.length!=0}}"/> -->
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='box box-f1 box-ver padding-tb-6 backgd-f' bindtap='addPassener'>
    <view class='box box-f1 box-apc '>
      <view style='background:url(../../images/addList.png) no-repeat center center;background-size:cover;width:80rpx;height:80rpx;' ></view>
    </view>
    <view class='box box-f1 box-apc font-13'>添加</view>
  </view>
  <view class='{{passeners.length==0?"none":""}}'>
    <view class='height-10'></view>
    <block wx:for="{{passeners}}" wx:key="*this">
      <view class='box box-f1 box-hor margin-lr-1 padding-tb-1 box-ac'>
        <view class="icon-yes {{item.active? 'c-f4393c':''}} font-size-10" data-passenerid='{{item.id}}' data-index="{{index}}" catchtap='onSelectPassener'></view>
        <view class='box box-f1 box-ver font-13 color-9 margin-lr-1'>
          <view class='box box-f1 padding-tb-2'>
            <view style='width:140rpx'>姓名：</view>
            <view class='box box-f1'>{{item.name}}</view>
          </view>
          <view class='box box-f1 padding-tb-2'>
            <view style='width:140rpx'>身份证：</view>
            <view class='box box-f1'>{{item.cert_no}}</view>
          </view>
        </view>
        <view class="icon-edit  font-size-10" data-passenerid="{{item.id}}" catchtap='editPassener'></view>
      </view>
      <view class='height-10'></view>
    </block>
  </view>

  <template is="pos_fixed_b" data="{{text:'确认'}}" />
</view>
<!-- 添加乘机人 -->
<!--pages/wycx/addList/addList_page/addList_page.wxml-->
<view class='add-edit-passenger' wx:if="{{inBind_3}}">
  <view class='header'>
    <view class='header_noBackod border-b-1'>
      <view class='header-con'>
        <view class='box box-f1 box-hor  margin-lr-1'>
          <view class='header-left' bindtap='bindBackChange_3'>
            <image src='../../images/back-b.png' style='width:16rpx;' mode='widthFix' />
          </view>
          <view class='box box-f1 box-apc font-15'>{{!editPassener.id?"新增乘机人":"编辑乘机人"}}</view>
          <view class='header-right'>
            <view class="icon-dustbin btn-delete font-size-10" data-passenerid="{{editPassener.id}}" catchtap='deletePassener'></view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <form bindsubmit='submitPassener' report-submit='true'>
    <input type='text' value='{{!editPassener.id?"add":"update"}}' class="none"  name='action'/>
    <input type='text' value="{{editPassener.id}}" class="none"  name='psgId'/>
    <view class='box box-f1 margin-lr-1 box-ver'>
      <view class='box box-f1 box-ac font-13 padding-tb-1 border-b-1'>
        <view style='width:140rpx;' class='color-3'>姓名</view>
        <view class='box box-f1 box-ac'>
          <input type='text' placeholder='请输入姓名' value='{{editPassener.name}}' data-key="name" name='name'/>
        </view>
      </view>
      <picker bindchange="bindPickerChange" value="{{picker_index}}" range="{{certificate}}" mode='selector'>
        <view class='box box-f1 box-ac font-13 padding-tb-1 border-b-1'>
          <view style='width:140rpx;' class='color-3'>证件类型</view>
          <view class='box box-f1 box-ac'>
            <view>{{certificate[picker_index]}}</view>
            <input type='text' value="{{picker_index}}" class="none" data-key="cert_type" name='cert_type'/>
          </view>
          <view class='box bxo-ac'>
            <view style='background:url(../../images/right_jt.png) no-repeat center center;background-size:cover;width:40rpx;height:40rpx;margin-top:4rpx;'></view>
          </view>
        </view>
      </picker>
      <view class='box box-f1 box-ac font-13 padding-tb-1 border-b-1'>
        <view style='width:140rpx;' class='color-3'>证件号</view>
        <view class='box box-f1 box-ac'>
          <input type='text' placeholder='请输入证件号' data-certType='{{picker_index}}' value='{{editPassener.cert_no}}' data-key="cert_no" name='cert_no' />
        </view>
      </view>
      <view class='box box-f1 box-ac font-13 padding-tb-1 border-b-1'>
        <view style='width:140rpx;' class='color-3'>手机号</view>
        <view class='box box-f1 box-ac'>
          <input type='text' placeholder='请输入手机号' value='{{editPassener.tel}}' data-key="tel" name='tel'/>
        </view>
      </view>
    </view>
      <button form-type='submit' style='background:red;position:fixed;bottom:0;width:100%;line-height:2;border:none;color:#ffffff;'>确定</button>
    </form>
  <!-- <view class='box box-f1 box-apc font-16 color-f padding-tb-1 ' style='background:red;position:fixed;bottom:0;width:100%' catchtap='catchAdd'>确定</view> -->
</view>