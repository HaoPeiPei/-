/*通用列表显示   start*/

.list {
  /* margin-top: 1.25em; */
}
.list .li-view:last-child{
  border-bottom:1px solid #dbdbdb;
}

.list .list-label {
  text-align: left;
  padding: 0.5em 0.625em 0.25em 0.625em;
}

.list .list-label.title-middle {
  padding-bottom: 0.75em;
}

.list .list-label span {
  font-size: 0.75em;
  font-weight: normal;
  color: #999;
}

.list ul {
  /*  border-bottom:0px solid #e0e1e1; 
    border-top:0px solid #e0e1e1; */
}

.list ul li .li-view {
  /*正文内容为垂直居中*/
  -webkit-box-flex: 1;
  box-flex: 1;
  display: -webkit-box;
  display: box;
  -webkit-box-align: center;
  box-align: center;
  border-bottom: 1px solid #e0e1e1;
  padding: 0;
  font-weight: normal;
  color: #4d4d4d;
  font-size: 1em;
  /* margin-left: 0.625em; */
}

.list ul li .li-view.no-border {
  /*没有边框*/
  border-bottom: none;
}

.list ul li:last-child .li-div {
  border-bottom: none;
}

.list ul li .no-indent {
  /*底部横线满屏显示*/
  margin-left: 0em;
}

.list  ul li .li-view input {
  padding: 0.5em 0.625em;
  line-height: 1.25em;
}
