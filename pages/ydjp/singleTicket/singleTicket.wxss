/* pages/ydjp/ticket/ticket.wxss */
@import "../template/template.wxss";
.font-size-28{
    font-size: 28rpx;
    font-weight: bold;
}
.font-size-22{
    font-size: 26.84rpx;
}
.font-size-20{
    font-size: 24.4rpx;
}
.font-size-18{
    font-size: 22rpx;
}
.wrap{
    height: 100vh;
    overflow: auto;
    background-color: #f4f5f7;
    position: relative;
    padding-bottom: 130rpx;
}
.header{
    height: 90rpx;
    position: relative;
    border-bottom: 1rpx solid #d7d7d7;
    font-size: 36.6rpx;
    background-color: #fff;
}
.header .back{
    font-size: 42.7rpx;
    margin: 25rpx 0 0 25rpx;
}
.header .cityName_wrap{
     margin-top: 24rpx;
     font-size: 36.6rpx;
}
.header .icon-phone{
    margin: 20rpx 25rpx 0 0;
    font-size: 42.7rpx;
}
.main .search-title{
    height: 75rpx;
    background-color: #fff;
}
.main .icon-arror-l{
    margin: 0 20rpx 0 25rpx;
}
.main .icon-arror-r{
    margin: 0 25rpx 0 20rpx;
}
.main .search-date{
    width: 210rpx;
}
.search-date text:nth-child(1){
    font-size: 26.84rpx;
    display: block;
}
.search-date text:nth-child(2){
    font-size: 24.4rpx;
    display: block;
    
}
.main .search-cur{
    align-self: stretch;
    color: #fff;
    background-color: #f4393c;
    align-items: center;
    justify-content: center;
}
.main .search-cur text{
    font-size: 26.84rpx;
    color: #fff;
}
.main .displayFliInfo-list .displayFliInfo-item{
    margin-top: 20rpx;
    background-color: #fff;
    padding: 12rpx 0 12rpx 25rpx;
} 
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-left{
    width: 510rpx;
    border-right: 1rpx dashed #d6d6d6;
}
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-top{
    height: 70rpx;
}
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-top text{
    display: block;
} 
.r_position{
    position: relative;
}
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-left .icon-lineArror{
    font-size: 79.3rpx;
} 
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-left .stop{
    position: absolute;
    top: 4rpx;
    width: 100%;
    text-align: center;
} 
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-left .displayFliInfo-fot{
    height: 40rpx;
}
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-left .flightNo{
    padding-right: 23rpx;
    border-right: 5rpx solid #f5383c;
    margin-right: 21rpx;
}
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-left .search-arror{
    margin:  0 50rpx;
} 

.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-right{
    padding-right: 25rpx;
} 
.main .displayFliInfo-list .displayFliInfo-item .displayFliInfo-right .discount{
    margin-top: 45rpx;
}
.filter{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 72rpx;
    background-color: #403a3a;
}