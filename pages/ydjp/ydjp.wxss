/* pages/ydjp/ydjp.wxss */
/* header */

@import "../../template/template.wxss";
.wrap{
    height: 100vh;
    background-color: #fff; 
}
.margin-top--10{
    margin-top: -10rpx;
}
.main{
    padding: 0 25rpx;
}
.main .ticket-type{
    background-color: #979596;
    color: #fff;
    height: 95rpx;
    line-height: 95rpx;
    font-size: 34rpx;
    background-color: #fff;
}
.main .ticket-type .text{
    border-top: 8rpx solid #979596;
    background-color: #979596;
}
.main .ticket-type .text.active{
    background-color: #FFF;
    color: #000;
    border-top: 8rpx solid #f4393c;
    opacity: 1 !important;
}
.main .ticket-city{
    padding: 80rpx 15rpx;
    font-size: 38rpx;
}
.main .ticket-city .i-arror{
    width: 50rpx;
}
.main .ticket-city .i-arror i{
    font-size: 50rpx;
}
.ticket-date .date_wrap text:nth-child(1){
    font-size: 38rpx;
    margin-right: 20rpx;
}
.ticket-date .date_wrap text:nth-child(2){
    font-size: 24rpx;
}
.ticket-date-single .date_wrap{
    width: 100%;
    height: 65rpx;
    border-bottom: 1rpx solid #d7d7d7;
    padding: 0 0 30rpx 15rpx;
}
.ticket-date-double .date_wrap{
    width: 290rpx;
    height: 65rpx;
    border-bottom: 1rpx solid #d7d7d7;
    padding: 0 15rpx 30rpx 15rpx;
}
.ticket-find{
    margin-top: 72rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    background-color: #f4393c;
    font-size: 32rpx;
}