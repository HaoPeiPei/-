}
.grxx{
  height: 200rpx;
  padding: 0rpx 30rpx;
  background-color: #000;
  color: #fff;
}
.tuoxiang{
  position: relative;
  width: 200rpx;
  
}
.tuoxiang image{
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -70rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.tuichu{
  width: 120rpx;
  height: 100%;
}
.tuichu image{
