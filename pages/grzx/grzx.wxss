}

ul {
  display: block;
  width: 100%;

}

ul li {
  display: block;
  width: 100%;
  line-height: 100rpx;
}

ul li .li-view {
  border-bottom: 1px solid #d7d7d7;
  margin: 0rpx 30rpx;
  color: #333;
}
ul li:last-child .li-view{
  border-bottom: 0px solid #d7d7d7;
}
